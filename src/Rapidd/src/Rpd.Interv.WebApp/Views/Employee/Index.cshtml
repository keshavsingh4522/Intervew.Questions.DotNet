@using Rpd.Interv.Core.Data.Models.View
@model IEnumerable<EmployeeTimeViewModel>

@{
    ViewData["Title"] = "Employee Time Entries";
}

<h2>@ViewData["Title"]</h2>


<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>Employee Name</th>
                <th>Total Time Worked (Hours)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr class="@(employee.ShouldHighlight ? "highlight" : "") animate-fade-in">
                    <td>@(employee.EmployeeName ?? "Other")</td>
                    <td>@employee.TotalHoursWorked</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<style>
    .highlight {
        background-color: yellow;
    }
</style>
